<!DOCTYPE html>
<html lang="en">
<head>
  <title>Hệ thông thanh toán điện tử</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="../icon/css/font-awesome.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style type="text/css">
        p{
            color: red;
        }
    </style>
    <script>
    function validateForm() {
        var x = document.forms["myForm"]["id"].value;
        var y = document.forms["myForm"]["pass"].value;
        if (x == "") {
            document.getElementById("check_id").innerHTML = "Vui lòng nhập số điện thoại";
            return false;
        }
        else if (y == ""){
            document.getElementById("check_pass").innerHTML = "Vui lòng nhập mật khẩu";
            return false;
        }
        else
        {
            return true;
        }
    }
    </script>
</head>
<body>
<div class="box box-primary">
<div class="box-header with-border">
                <p>
                  <% if(ss == "null"){ %>
                  <br>
                  <% } else if(ss == "Thành công"){ %>
                    <div class='alert alert-success alert-dismissible'>
                                    <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>×</button>
                                    <h4><i class='icon fa fa-check'></i> <%= ss %> </h4>
                                    <%= desc %></div>
                  <% } else if(ss == "Thất bại"){ %>
                    <div class='alert alert-warning alert-dismissible'>
                                    <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>×</button>
                                    <h4><i class='icon fa fa-check'></i> <%= ss %> </h4>
                                    <%= desc %></div>
                  <% } %>             
                </p>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Đăng nhập</h1>
            <br>

            <div class="account-wall">
            	<br>
            	<center>
            		<img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                    alt="">
            	</center>
            	<br>
                <form action="/" method="POST" role="form" name="myForm" onsubmit="return validateForm()">
                <input type="text" class="form-control" placeholder="Số điện thoại" name = "id" autofocus>
                <p id="check_id"></p>
                <br>
                <input type="password" class="form-control" placeholder="Mật khẩu" name = "pass">
                <p id="check_pass"></p>
                <br>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</body>
</html>

