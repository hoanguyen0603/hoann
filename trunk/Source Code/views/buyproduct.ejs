    <script>
    function isValid_10(p) {
    var phoneRe = /^[0](9|8)[0-9]{8}$/;
    return phoneRe.test(p);
    }
  
  
    function isValid_11(p) {
    var phoneRe = /^[0][1][0-9]{9}$/;
    return phoneRe.test(p);
    }
    function validateForm() {
        var x = document.forms["myForm"]["sdt"].value;
        var y = document.forms["myForm"]["gtdh"].value;
        if (x == "") {
            document.getElementById("check_sdt").innerHTML = "Vui lòng nhập số điện thoại khách hàng";
            return false;
        }
        else if(isNaN(x)){
            document.getElementById("check_sdt").innerHTML = "Vui lòng nhập số điện thoại khách hàng gồm ký tự số";
            return false;
        }
        else if (x.length != 10 && x.length != 11){
            document.getElementById("check_sdt").innerHTML = "Vui lòng nhập số điện thoại đúng định dạng";
            return false;
        }
        else if (x.length == 10 && isValid_10(x) == false ){
            document.getElementById("check_sdt").innerHTML = "Vui lòng nhập số điện thoại đúng định dạng";
            return false;
        }
        else if (x.length == 11 && isValid_11(x) == false ){
            document.getElementById("check_sdt").innerHTML = "Vui lòng nhập số điện thoại đúng định dạng";
            return false;
        }
        else if (y == ""){
            document.getElementById("check_gtdh").innerHTML = "Vui lòng nhập giá trị đơn hàng";
            return false;
        }
         else if(isNaN(y)){
            document.getElementById("check_gtdh").innerHTML = "Vui lòng nhập giá trị đơn hàng gồm ký tự số";
            return false;
        }
        else
        {
            return true;
        }
    }
